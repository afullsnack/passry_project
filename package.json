{
  "name": "passry",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build:api": "pnpm run --filter @passry/api build",
    "generate:api:db": "pnpm run db:generate",
    "dev:all": "turbo dev",
    "dev:web": "turbo dev --parallel --filter=@passry/api --filter=@passry/web",
    "start:api": "pnpm run --filter @passry/api start",
    "db:generate": "pnpm run --filter @passry/api db:generate",
    "db:migrate": "pnpm run --filter @passry/api db:migrate",
    "migrate:api:db": "pnpm run db:migrate",
    "deploy:api": "flyctl deploy --config ./packages/api/fly.toml --dockerfile ./Dockerfile --remote-only --build-arg DATABASE_URL=$DATABASE_URL --build-arg DATABASE_AUTH_TOKEN=$DATABASE_AUTH_TOKEN"
  },
  "dependencies": {
    "@better-fetch/fetch": "^1.1.18",
    "better-auth": "^1.3.4",
    "date-fns": "^4.1.0",
    "dotenv-cli": "^9.0.0",
    "hono": "^4.7.11",
    "tsup": "^8.5.0",
    "turbo": "^2.5.6",
    "ua-parser-js": "^2.0.4",
    "zod": "^4.0.10"
  },
  "packageManager": "pnpm@9.11.0"
}
